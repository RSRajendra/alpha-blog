<h1 class="text-center mt-4">Categories</h1>
<div class="flickr_pagination">
    <div class="page_info">
    </div>
    <%= will_paginate @articles, :container => false %>
</div>
<div class="container">
    <%= @categories.length.times do |i| %>
        <div class="row justify-content-md-center">
            <div class="col-4 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded"> 
                        <div class="card-body">
                            <h5 class="card-title"><%= link_to @categories[i].name, category_path(@categories[i]), class: "text-success" %></h5>
                            <p class="card-text"><%= pluralize(@categories[i].articles.count, "article")  %></p>
                        </div>
                        
                        <div class="card-footer text-muted">
                            <small>Created <%= time_ago_in_words(@categories[i].created_at) %> ago,
                            edited <%= time_ago_in_words(@categories[i].updated_at) %> ago</small>
                        </div>
                </div>
            </div>    
        </div>
    <% end %>
</div>
<div class="flickr_pagination mb-4">
    <div class="page_info">
    </div>
    <%= will_paginate @articles, :container => false %>
</div>