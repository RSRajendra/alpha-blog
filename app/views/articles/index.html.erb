<h1>Articles listing page</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th colspan="3">Actions</th>
        </tr>
    </thead>
    <tbody>
        <%= @articles.length.times do |i| %>
            <tr>
                <td><%= @articles[i].title %></td>
                <td><%= @articles[i].description  %></td>
                <td><%= link_to 'Show', article_path(@articles[i]), method: :get %></td>
                <td><%= link_to 'Edit', edit_article_path(@articles[i]), method: :get %></td>
                <td><%= link_to 'Delete', article_path(@articles[i]), method: :delete, data: {confirm: 'Are you sure ?'} %></td>
            </tr>
        <% end %>
    </tbody>
</table>


<p><%= link_to 'Create new article', new_article_path, method: :get %> | <%= link_to 'Home Page', root_path, method: :get %> </p>
